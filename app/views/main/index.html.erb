 <script type="text/javascript">    
   $(document).ready(function() {
      setTimeout(function(){ window.location.reload();
      }, 60000);
     // alert('REFRESHED!')
   });
</script>

<br clear="all">
<div class="row">
	<div class="col-md-6">
		<div id="clock" class="light">
		    <div class="display">
		        <div class="weekdays"></div>
		        <div class="ampm"></div>
		        <div class="alarm"></div>
		        <div class="digits"></div>
		    </div>
		</div>
		<% @wish_times.each do |time| %>
		 <% if @current_time == time %>
			<p align="center"><%= link_to 'Make A Wish!', new_wish_path, class: 'btn btn-primary btn-lg' %></p>
		  <% end %>
		<% end %>
	</div>

<br clear="all"/>

		<p>It is <%=@closest_duration %> minutes until your next wish at: <%=@closest_wish_time.strftime('%H:%M') %></p>


	<div class="col-md-6">
		<h2>You have <%= @next_time %> minutes until genie will grant you a wish</h2>
		<p>In the meantime you could do the following things:</p>
		<% @activities.each do |activity| %>

			<p>You could <strong style="text-transform:uppercase"><%= activity.task %></strong> <%=  @closest_duration / activity.ittake.min %> times</p>
		<% end %>
	</div>
</div>